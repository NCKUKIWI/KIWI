<% layout('../public/layout') %>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div id="sidebar">
          <div class="sidebar-query">
            <h1 class="text-center h3">輸入關鍵字</h1>
            <input type="text" name="query" id="query">
          </div>
          <div class="sidebar-categories">
            <h1 class="text-center h3">選擇類別</h1>
            <ul>
              <li class="catagory">A9 通識中心</li>
              <li class="catagory">A2 體育室</li>
              <li class="catagory">A1 外國語言</li>
              <li class="catagory">A6 服務學習</li>
              <li class="catagory">A7 基礎國文</li>
            </ul>
          </div>
          <li id="search">查詢課程</li>
        </div>
      </div>
      <div class="col-md-9">
        <div id="content">
          <table class="table">
            <tr>
              <th class="coursename">課程</th>
              <th class="catalog">類別</th>
              <th class="teacher">開課老師</th>
              <th class="semester">學期</th>
            </tr>
            <% for(var i in data){ %>
            <tr>
              <td class="coursename"><a href="post/<%= data[i].id %>"><%- data[i].course_name %></a></td>
              <td class="catalog"><%- data[i].catalog %></td>
              <td class="teacher"><%- data[i].teacher %></td>
              <td class="semester"><%- data[i].semester %></td>
            </tr>
            <% } %>
          </table>
        </div>
      </div>
    </div>
  </div>
