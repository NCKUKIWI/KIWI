<script type="text/javascript">
  var content = [
    <% for(var i in teachers){ %>
      {
        title:'<%- teachers[i]%>',
        url:'/?teacher=<%- teachers[i]%>'
      },
    <% } %>
    <% for(var i in course_name){ %>
      {
        title: '<%- course_name[i]%>',
        url: '/?course=<%- course_name[i]%>'
      },
    <% } %>
  ];
  $(document).ready(function() {
    $('.ui.search').search({
         source: content,
    });
  });
</script>

